<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_email %>
</p>

<%= link_to 'Edit', edit_article_path(@article) if current_user.my_article? @article%> |
<%= link_to 'Back', articles_path %>

<p>
	<strong>Comments</strong>
	<div><%= render partial: 'comments/new_comment', locals: {parent_object: @article} %></div>
	<div id="comments">
		<%= render partial: 'comments/comment', collection: @comments %>
	</div>
</p>
